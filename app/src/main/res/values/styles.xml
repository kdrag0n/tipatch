<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/background_dark</item>
        <item name="colorPrimaryDark">@color/background_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="cardStyle">@style/CardTheme</item>
    </style>

    <style name="LaunchTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="colorPrimaryDark">@color/background_dark</item>
    </style>

    <style name="MenuTheme" parent="ThemeOverlay.MaterialComponents">
        <item name="android:colorBackground">@color/background_dark</item>
    </style>
    
    <style name="DialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
        <item name="background">@color/background_dark</item>
        <item name="android:background">@color/background_dark</item>
    </style>

    <style name="CardTheme" parent="CardView.Dark">
        <item name="cardBackgroundColor">@color/card_dark</item>
    </style>
</resources>
